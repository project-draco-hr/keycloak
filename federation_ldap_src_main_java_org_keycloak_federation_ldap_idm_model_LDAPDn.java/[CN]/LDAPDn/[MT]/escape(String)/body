{
  if (rdnValue.contains(",")) {
    StringBuilder result=new StringBuilder();
    boolean first=true;
    for (    String split : rdnValue.split(",")) {
      if (!first) {
        result.append("\\,");
      }
 else {
        first=false;
      }
      result.append(split);
    }
    return result.toString();
  }
 else {
    return rdnValue;
  }
}
