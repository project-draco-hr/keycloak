{
  String url=getRequestUrl();
  log.infof("sending redirect uri: %s",url);
  if (!isRequestSecure() && deployment.isSslRequired()) {
    int port=sslRedirectPort();
    if (port < 0) {
      return null;
    }
    KeycloakUriBuilder secureUrl=KeycloakUriBuilder.fromUri(url).scheme("https").port(-1);
    if (port != 443)     secureUrl.port(port);
    url=secureUrl.build().toString();
  }
  return deployment.getAuthUrl().clone().queryParam("client_id",deployment.getResourceName()).queryParam("redirect_uri",url).queryParam("state",state).queryParam("login","true").build().toString();
}
