{
  KeycloakSession session=factory.create();
  KeycloakTransaction tx=session.getTransaction();
  try {
    tx.begin();
    task.run(session);
    if (tx.isActive()) {
      if (tx.getRollbackOnly()) {
        tx.rollback();
      }
 else {
        tx.commit();
      }
    }
  }
  finally {
    if (tx.isActive()) {
      tx.rollback();
    }
    session.close();
  }
}
