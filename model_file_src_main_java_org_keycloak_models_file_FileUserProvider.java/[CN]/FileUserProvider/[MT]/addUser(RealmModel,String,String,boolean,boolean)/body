{
  if (inMemoryModel.hasUserWithUsername(realm.getId(),username.toLowerCase()))   throw new ModelDuplicateException("User with username " + username + " already exists in realm.");
  UserAdapter userModel=addUserEntity(realm,id,username.toLowerCase());
  if (addDefaultRoles) {
    for (    String r : realm.getDefaultRoles()) {
      userModel.grantRole(realm.getRole(r));
    }
    for (    ClientModel application : realm.getClients()) {
      for (      String r : application.getDefaultRoles()) {
        userModel.grantRole(application.getRole(r));
      }
    }
  }
  if (addDefaultRequiredActions) {
    for (    RequiredActionProviderModel r : realm.getRequiredActionProviders()) {
      if (r.isEnabled() && r.isDefaultAction()) {
        userModel.addRequiredAction(r.getAlias());
      }
    }
  }
  return userModel;
}
