{
  for (  UserRequiredActionEntity attr : user.getRequiredActions()) {
    if (attr.getAction().equals(action)) {
      return;
    }
  }
  UserRequiredActionEntity attr=new UserRequiredActionEntity();
  attr.setAction(action);
  attr.setUser(user);
  em.persist(attr);
  user.getRequiredActions().add(attr);
}
