{
  for (  UserAttributeEntity attr : user.getAttributes()) {
    if (attr.getName().equals(name)) {
      attr.setValue(value);
      return;
    }
  }
  UserAttributeEntity attr=new UserAttributeEntity();
  attr.setName(name);
  attr.setValue(value);
  attr.setUser(user);
  em.persist(attr);
  user.getAttributes().add(attr);
}
