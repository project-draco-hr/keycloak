{
  List<T> result=loadEntities(type,query,context);
  if (result.size() > 1) {
    throw new IllegalStateException("There are " + result.size() + " results for type="+ type+ ", query="+ query+ ". We expect just one");
  }
 else   if (result.size() == 1) {
    return result.get(0);
  }
 else {
    return null;
  }
}
