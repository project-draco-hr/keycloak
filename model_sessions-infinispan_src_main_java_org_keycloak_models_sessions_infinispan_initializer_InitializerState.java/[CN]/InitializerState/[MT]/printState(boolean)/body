{
  int finished=0;
  int nonFinished=0;
  List<Integer> finishedList=new ArrayList<>();
  List<Integer> nonFinishedList=new ArrayList<>();
  int size=segments.size();
  for (int i=0; i < size; i++) {
    Boolean done=segments.get(i);
    if (done) {
      finished++;
      if (includeSegments) {
        finishedList.add(i);
      }
    }
 else {
      nonFinished++;
      if (includeSegments) {
        nonFinishedList.add(i);
      }
    }
  }
  StringBuilder strBuilder=new StringBuilder("sessionsCount: " + sessionsCount).append(", finished segments count: " + finished).append(", non-finished segments count: " + nonFinished);
  if (includeSegments) {
    strBuilder.append(", finished segments: " + finishedList).append(", non-finished segments: " + nonFinishedList);
  }
  return strBuilder.toString();
}
