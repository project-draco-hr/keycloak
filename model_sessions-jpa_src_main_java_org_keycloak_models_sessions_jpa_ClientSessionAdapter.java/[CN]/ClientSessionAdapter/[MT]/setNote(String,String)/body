{
  for (  ClientSessionNoteEntity attr : entity.getNotes()) {
    if (attr.getName().equals(name)) {
      attr.setValue(value);
      return;
    }
  }
  ClientSessionNoteEntity attr=new ClientSessionNoteEntity();
  attr.setName(name);
  attr.setValue(value);
  attr.setClientSession(entity);
  em.persist(attr);
  entity.getNotes().add(attr);
}
