{
  StringBuilder sb=new StringBuilder();
  sb.append(socialLoginUrl);
  sb.append("?provider_id=" + id);
  sb.append("&client_id=" + clientId);
  if (scope != null) {
    sb.append("&scope=" + scope);
  }
  if (state != null) {
    sb.append("&state=" + state);
  }
  sb.append("&redirect_uri=" + redirectUri);
  return sb.toString();
}
