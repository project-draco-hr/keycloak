{
  ClientSessionCode code=new ClientSessionCode(context.getRealm(),context.getClientSession());
  code.setAction(ClientSessionModel.Action.AUTHENTICATE);
  URI action=LoginActionsService.authenticationFormProcessor(context.getUriInfo()).queryParam(OAuth2Constants.CODE,code.getCode()).build(context.getRealm().getName());
  return context.getSession().getProvider(LoginFormsProvider.class).setActionUri(action).setClientSessionCode(code.getCode());
}
