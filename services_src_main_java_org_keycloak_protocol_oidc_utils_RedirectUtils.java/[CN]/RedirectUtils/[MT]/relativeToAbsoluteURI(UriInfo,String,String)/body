{
  if (rootUrl == null || rootUrl.isEmpty()) {
    URI baseUri=uriInfo.getBaseUri();
    String uri=baseUri.getScheme() + "://" + baseUri.getHost();
    if (baseUri.getPort() != -1) {
      uri+=":" + baseUri.getPort();
    }
    rootUrl=uri;
  }
  relative=rootUrl + relative;
  return relative;
}
