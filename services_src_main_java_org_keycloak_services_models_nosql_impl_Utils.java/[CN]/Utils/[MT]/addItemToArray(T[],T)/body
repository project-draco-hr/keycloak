{
  if (item == null) {
    throw new IllegalArgumentException("item must be non-null");
  }
  T[] outputArray;
  if (inputArray == null) {
    outputArray=(T[])Array.newInstance(item.getClass(),1);
  }
 else {
    outputArray=Arrays.copyOf(inputArray,inputArray.length + 1);
  }
  outputArray[outputArray.length - 1]=item;
  return outputArray;
}
