{
  NoSQLQuery query=NoSQLQueryBuilder.create(MongoDBQueryBuilder.class).andCondition("loginName",name).andCondition("realmId",getOid()).build();
  UserData user=noSQL.loadSingleObject(UserData.class,query);
  if (user == null) {
    return null;
  }
 else {
    return new UserAdapter(user,noSQL);
  }
}
