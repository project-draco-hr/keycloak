{
  event.event(EventType.LOGIN);
  Checks checks=new Checks();
  if (!checks.check(code)) {
    return checks.response;
  }
  event.detail(Details.CODE_ID,code);
  ClientSessionCode clientSessionCode=checks.clientCode;
  ClientSessionModel clientSession=clientSessionCode.getClientSession();
  if (clientSession.getAction().equals(ClientSessionModel.Action.RECOVER_PASSWORD)) {
    TokenManager.dettachClientSession(session.sessions(),realm,clientSession);
    clientSession.setAction(ClientSessionModel.Action.AUTHENTICATE);
  }
  LoginFormsProvider forms=Flows.forms(session,realm,clientSession.getClient(),uriInfo,headers).setClientSessionCode(clientSessionCode.getCode());
  return forms.createLogin();
}
