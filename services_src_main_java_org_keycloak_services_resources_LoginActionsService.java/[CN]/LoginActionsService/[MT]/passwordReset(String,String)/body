{
  event.event(EventType.RESET_PASSWORD);
  if (key != null) {
    Checks checks=new Checks();
    if (!checks.check(key,ClientSessionModel.Action.RECOVER_PASSWORD.name())) {
      return checks.response;
    }
    ClientSessionCode accessCode=checks.clientCode;
    return session.getProvider(LoginFormsProvider.class).setClientSessionCode(accessCode.getCode()).createResponse(RequiredAction.UPDATE_PASSWORD);
  }
 else {
    return session.getProvider(LoginFormsProvider.class).setClientSessionCode(code).createPasswordReset();
  }
}
