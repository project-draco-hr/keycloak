{
  if (uriInfo.getQueryParameters().containsKey("key")) {
    AccessCodeEntry accessCode=tokenManager.parseCode(uriInfo.getQueryParameters().getFirst("key"),session,realm);
    accessCode.setAuthMethod("form");
    if (accessCode == null || accessCode.isExpired() || !accessCode.hasRequiredAction(RequiredAction.UPDATE_PASSWORD)) {
      return unauthorized();
    }
    return Flows.forms(session,realm,uriInfo).setAccessCode(accessCode.getCode()).createResponse(RequiredAction.UPDATE_PASSWORD);
  }
 else {
    return Flows.forms(session,realm,uriInfo).createPasswordReset();
  }
}
