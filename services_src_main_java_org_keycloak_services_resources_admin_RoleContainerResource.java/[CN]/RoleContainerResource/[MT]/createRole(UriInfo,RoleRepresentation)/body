{
  auth.requireManage();
  try {
    RoleModel role=roleContainer.addRole(rep.getName());
    role.setDescription(rep.getDescription());
    adminEvent.operation(OperationType.CREATE).resourcePath(uriInfo.getAbsolutePathBuilder().path(role.getName()).build().toString().substring(uriInfo.getBaseUri().toString().length())).representation(rep).success();
    return Response.created(uriInfo.getAbsolutePathBuilder().path(role.getName()).build()).build();
  }
 catch (  ModelDuplicateException e) {
    return ErrorResponse.exists("Role with name " + rep.getName() + " already exists");
  }
}
