{
  auth.requireManage();
  ApplicationModel app=realm.getApplicationByName(appName);
  if (app == null) {
    throw new NotFoundException();
  }
  for (  RoleRepresentation role : roles) {
    RoleModel roleModel=app.getRole(role.getName());
    if (roleModel == null) {
      throw new NotFoundException();
    }
    realm.addScopeMapping(client,roleModel);
  }
}
