{
  try {
    if (sep == '?') {
      sb.append(sep);
      sep='&';
    }
 else {
      sb.append(sep);
    }
    sb.append(URLEncoder.encode(name,"UTF-8"));
    sb.append("=");
    sb.append(URLEncoder.encode(value,"UTF-8"));
    return this;
  }
 catch (  UnsupportedEncodingException e) {
    throw new IllegalStateException(e);
  }
}
