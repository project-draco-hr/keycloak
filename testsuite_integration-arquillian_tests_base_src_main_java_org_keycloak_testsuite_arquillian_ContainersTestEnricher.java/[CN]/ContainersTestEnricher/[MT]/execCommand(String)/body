{
  Process process=Runtime.getRuntime().exec(command);
  if (process.waitFor(10,TimeUnit.SECONDS)) {
    if (process.exitValue() != 0) {
      throw new RuntimeException("Adapter installation failed. Process exitValue: " + process.exitValue() + "; <error output>\n"+ getOutput(process.getErrorStream())+ "</error output>");
    }
    log.debug("process.isAlive(): " + process.isAlive());
  }
 else {
    process.destroyForcibly();
    throw new RuntimeException("Timeout after 10 seconds.");
  }
}
