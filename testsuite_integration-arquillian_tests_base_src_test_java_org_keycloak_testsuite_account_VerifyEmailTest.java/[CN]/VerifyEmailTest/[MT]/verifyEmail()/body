{
  testRealmAccountManagementPage.navigateTo();
  testRealmLoginPage.form().login(testUser);
  assertEquals("You need to verify your email address to activate your account.",testRealmVerifyEmailPage.getFeedbackText());
  String verifyEmailUrl=assertEmailAndGetUrl(MailServerConfiguration.FROM,testUser.getEmail(),"Someone has created a Test account with this email address.");
  log.info("navigating to url from email: " + verifyEmailUrl);
  driver.navigate().to(verifyEmailUrl);
  assertCurrentUrlStartsWith(testRealmAccountManagementPage);
  testRealmAccountManagementPage.signOut();
  testRealmLoginPage.form().login(testUser);
  assertCurrentUrlStartsWith(testRealmAccountManagementPage);
}
