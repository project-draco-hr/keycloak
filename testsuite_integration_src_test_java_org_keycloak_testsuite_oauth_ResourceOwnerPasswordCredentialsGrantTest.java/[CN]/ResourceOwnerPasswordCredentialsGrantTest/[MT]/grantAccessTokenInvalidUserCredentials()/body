{
  oauth.clientId("resource-owner");
  OAuthClient.AccessTokenResponse response=oauth.doGrantAccessTokenRequest("secret","test-user@localhost","invalid");
  assertEquals(401,response.getStatusCode());
  assertEquals("invalid_grant",response.getError());
  events.expectLogin().client("resource-owner").session((String)null).detail(Details.AUTH_METHOD,"oauth_credentials").detail(Details.RESPONSE_TYPE,"token").removeDetail(Details.CODE_ID).removeDetail(Details.REDIRECT_URI).removeDetail(Details.CONSENT).error(Errors.INVALID_USER_CREDENTIALS).assertEvent();
}
